<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    tools:context=".MenuOptionsWelcomeMessageCollectActivity" 
    android:orientation="vertical">
    <LinearLayout 
     android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="horizontal">
     <!--   <TextView android:id="@+id/digitLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Digit:"
       android:textSize = "15sp"  
       android:paddingTop="10dip"/> -->
        <TextView android:id="@+id/digitCollectedTxt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:text=""
       android:textSize = "35sp"  
       android:paddingTop="10dip"/>
      
        
    </LinearLayout>
  
   
    <EditText
       android:id="@+id/optionsShortMsg"
       android:paddingTop="20dip"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:ems="10"
       android:inputType="textCapSentences" 
       android:hint="Eg: Sales, Finance."
      >
    </EditText>
       <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:background="#123322" />
    <EditText
       android:id="@+id/optionsWelcomeMsg"
       android:paddingTop="20dip"
       android:layout_width="match_parent"
       android:layout_height="120dip"
       android:ems="10"
       android:inputType="textMultiLine|textCapSentences" 
       android:hint=" Welcome message"
     >
      
   </EditText>
 
  <Spinner
  android:id="@+id/optionsList"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:spinnerMode="dialog"
  /> 
  
  
 <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:paddingTop="10dip">
  <TableRow>
    <Button android:id="@+id/cancelOptionsCollectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Cancel "/>
    <Button android:id="@+id/saveOptionsCollectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Save "/>
   
  </TableRow>
</TableLayout>

</LinearLayout>